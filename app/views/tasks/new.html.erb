<div class ="header">
  <h1>New Task</h1>
</div>

 <div class="form-container">
  <div class="form-group">
    <%= form_for(@task) do |f| %>
    <%= f.label :title, class: "col-m-4 control-label" %>
    <div class= "col-md-8">
     <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, class: "col-m-4 control-label" %>
  <div class= "col-md-8">
    <%= f.text_field :details, class: "form-control" %>
   </div>
  </div>
  <div class= "checkbox">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div class = "form-button">
    <%= f.submit%>
    <% end %>
  </div>
</div>


<div class="task-action-container">
 <a><%= link_to "Back to list", tasks_path %></a>
</div>

