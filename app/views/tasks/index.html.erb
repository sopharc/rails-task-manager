<div class= "header" >
    <h1>My tasks</h1>
</div>

<div class = "container">
 <ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
     <% else  %>
    <i class="far fa-square"></i>
     <% end %>
   </li>
  <% end %>
 </ul>
</div>

<div class = "task-action-container">
  <a><%= link_to "Add a new task", newtask_path %></a>
</div>



